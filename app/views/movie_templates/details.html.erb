   <%= @director.name %>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= @m.created_at %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= @m.updated_at %>
  </dd>
