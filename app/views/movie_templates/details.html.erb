</a>

<hr>

<dl>
  <dt>
    Title
  </dt>
  <dd>
    <%= @m.title %>
  </dd>

  <dt>
    Year
  </dt>
  <dd>
    <%= @m.year %>
  </dd>

  <dt>
    Duration
  </dt>
  <dd>
    <%= @m.duration %>
  </dd>

  <dt>
    Description
  </dt>
